<% include ./partials/header %>
<div class="container container-form ">
  
    <div class="card transparent">
        <h2 style="text-align: center;">Create a New Campground</h2>
        <div style="width: 90%; margin: 25px auto;">
            <form action="/" method="POST">
                <div class="form-group text-center">
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-primary">
                        <input type="radio" name="portfolio[type]" value="web" required> Web App
                        </label>
                        <label class="btn btn-primary">
                        <input type="radio" name="portfolio[type]" value="computer" required> Computer App
                        </label>
                </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="portfolio[title]" placeholder="App Name" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control"  name="portfolio[image]" placeholder="Link to an Image" required>
                </div>
                <div class="form-group">
                    <textarea rows="5" class="form-control" name="portfolio[description]" placeholder="Description (i.e. Why did I make it, what is it)" required></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="portfolio[functionality]" placeholder="Current functionality of the app (i.e. What can it do)" required></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="portfolio[developedWith]" placeholder="Comma separate languages, frameworks, IDEs, models, patterns that have been used to create the app" required></textarea>
                </div>
                <div class="form-group">
                    <input type="text"  class="form-control" name="portfolio[webLink]" placeholder="Link to App">
                </div>
                <div class="form-group">
                    <input type="text"  class="form-control" name="portfolio[gitLink]" placeholder="Link to GitHub">
                </div>
                <div class="form-group d-flex align-items-stretch">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        <a href="/">Go Back</a>
        </div>
    </div>

</div>

<% include ./partials/footer %>
