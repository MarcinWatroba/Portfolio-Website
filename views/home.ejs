<% include partials/header %>

<div class="container-fluid">
    <div id="title" class="d-flex justify-content-center my-4">
        <h1>Web Portfolio by Marcin Watroba</h1>
</div>

<nav id="mainNavbar" class="navbar navbar-dark navbar-expand-md py-0 fixed-top">
        <a class="navbar-brand" href="#">MW Portfolio</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">WEB APPS</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="https://github.com/marcin388/">GITHUB</a>
            </li>       
            <li class="nav-item">
              <a class="nav-link" href="#">OFFLINE APPS (coming soon)</a>
            </li>
          </ul>
        </div>
    </nav>

<% entries.forEach(entry => { %> 
    
    <div class="row py-3 portfolio-entry">
        <hr>
            <div class="col-12 col-md-4 ">
                <img class="entry-image" src="<%= entry.image %>">
            </div>
            <div class="col-12 col-md-8">
                <h3 class="overlay-text"><%= entry.title %></h3>
                <hr>
                <h5 class="overlay-text">Description</h5>
                <p class="overlay-text"><%= entry.description %></p>
                <hr>
                <h5 class="overlay-text">Current Functionality</h5>
                <p class="overlay-text"><%= entry.functionality %></p>
                <hr>
                <h5 class="overlay-text">Developed With</h5>
                <ul class="overlay-text">
                    <% entry.developedWith.forEach(tech => { %>
                        <li><%= tech %></li>
                    <% }) %>
                </ul>
                <% if(entry.webLink) { %>
                <a class="btn btn-success d-inline float-right mx-1" href="<%= entry.webLink %>">Visit Website</a>
                <% } else { %>
                    <a class="btn btn-warning d-inline float-right mx-1" href="#">Coming Soon</a>
                <% } %>
                <a class="btn btn-info d-inline float-right mx-1" href="<%= entry.gitLink %>">Visit Github</a>
            </div>
        <hr>
    </div>
<% }) %>

<% include partials/footer %>